{
  "manifest_version": 3,
  "name": "blindr",
  "description": "An extension that prevents you from acknowledging what you'd rather not",
  "version": "1.1",
  "icons": {
    "16": "public/logo.png",
    "32": "public/logo.png",
    "48": "public/logo.png",
    "128": "public/logo.png"
  },
  "permissions": [ "scripting", "tabs" ],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["./scripts/blindrs-on.js"],
      "css": ["./blindrs-on.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "public/logo.png",
      "32": "public/logo.png",
      "48": "public/logo.png",
      "128": "public/logo.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [ "/public/baby.gif"],
      "matches": ["https://*/*", "http://*/*"],
      "use_dynamic_url": true
    }
  ]
}